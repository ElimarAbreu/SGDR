<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_gastosresponsavel">

    <TextView
        android:id="@+id/textView_gastosreponsavel_titulo"
        android:layout_width="94dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:text="Gastos"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gastosreponsavel_titulo">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000FF">

            <LinearLayout android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_gastos_mes"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="MÃªs"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_gastos_vmes"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="09/2019"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000FF">

            <LinearLayout android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_gastos_vtotal"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Valor Total"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView_gastos_vvtotal"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="R$ 100.00"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000FF">

            <LinearLayout android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_gastos_vpago"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Valor a ser pago"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView_gastos_vvpago"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="R$ 40.00"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>