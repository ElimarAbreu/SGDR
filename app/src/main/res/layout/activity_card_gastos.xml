<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_gastos_mes"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="MÃªs"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_gastos_vmes"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="09/2019"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_gastos_vtotal"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Valor Total"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_gastos_vvtotal"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="R$ 100.00"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_gastos_vpago"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Valor a ser pago"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_gastos_vvpago"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="R$ 40.00"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>

    </TableRow>

</TableLayout>