<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_card_despesa"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Energia"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_card_respon"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Elimar"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_card_atual"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="R$ atual"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_card_venc"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Vencimento"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_card_anterior"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="R$ anterior"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF">

        <LinearLayout android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_card_vatual"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="R$ 100.00"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_card_vvenc"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="29/09/2019"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_card_vanterior"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="R$ 150.00"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textAlignment="center"/>
        </LinearLayout>

    </TableRow>

</TableLayout>